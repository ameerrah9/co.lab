{
    "manifest_version": 3,
    "name": "Well-Well-Well",
    "version": "0.1",
    "description": "Gentle Mental Health Reminders",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["prompts.js"]
    }],
    "action": {
        "default_icon": {
            "16": "images/icon.png",
            "24": "images/icon.png",
            "32": "images/icon.png"
        },
        "default_title": "Gentle Mental Health Reminders",
        "default_popup": "index.html"
    }
}